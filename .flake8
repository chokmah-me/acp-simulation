[flake8]
max-line-length = 100
extend-ignore =
    E203,  # Whitespace before ':' (Black compatibility)
    W503,  # Line break before binary operator (Black compatibility)
    F401,  # Unused imports (common in research code)
    F841,  # Unused variables (common in research code)
    W293,  # Blank line contains whitespace
    E402,  # Module level import not at top of file
    F541,  # F-string without placeholders
    E501,  # Line too long (handled by Black)
    F821   # Undefined name (handled by mypy)
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    # Legacy reference implementation - do not modify (CLAUDE.md)
    src/acp_corrected_final.py
